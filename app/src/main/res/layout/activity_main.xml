<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/posiblefondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainHub"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/posiblefondo">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="216dp"
            android:layout_height="141dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />


        <Button
            android:id="@+id/buttoningredientes"
            android:layout_width="342dp"
            android:layout_height="163dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:background="@drawable/btningredientes"
            android:fontFamily="@font/anton"
            android:onClick="btningredientes"
            android:text="Cocina con tus Ingredientes"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/buttonrecetas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonrecetas"
            android:layout_width="342dp"
            android:layout_height="163dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"
            android:layout_weight="1"
            android:background="@drawable/btnrecetas2"
            android:fontFamily="@font/anton"
            android:onClick="btnrecetas"
            android:text="Mira todas\n las Recetas"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttoningredientes" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>